@using E_TicaretSitesi.Models.Siniflar;
@model List<Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
    </tr>
    @foreach( var u in Model)
            {
                <tr>
                    <td>@u.UrunID</td>
                    <td>@u.UrunAD</td>
                    <td>@u.Marka</td>
                    <td>@u.Stok</td>
                    <td>@u.AlisFiyat</td>
                    <td>@u.SatisFiyat</td>
                    <td>@u.Kategori.KategoriAd</td>
                    <td>@u.UrunGorsel</td>
                </tr>
            }
</table>

<a href="/Urun/UrunEkle/" class="btn btn-info">Yeni Ürün</a>

